module enc_4to2_en_for(
    input [3:0] enc_in,
    input en,
    output [1:0] enc_out
    );
    
    reg [1:0] enc_out;
    reg [3:0] temp;
    integer i;
    
    always@(enc_in or en) begin
    if(en)
    enc_out=2'b00;
    else begin
    temp=4'b0001;
    enc_out=2'bxx;
    for(i=0; i<4; i=i+1) begin
    if(enc_in==temp)
    enc_out=i;
    temp=temp<<1;
    end
    end
    end
