module enc_4to2_en_if(
    input [3:0] enc_in,
    input en,
    output [1:0] enc_out
    );
    
    reg [1:0] enc_out;
    
    always@ (enc_in or en) begin
    if(en)
    enc_out=2'b00;
    else begin
    if(enc_in==4'b0001)
    enc_out=2'b00;
    else if(enc_in==4'b0010)
    enc_out=2'b01;
    else if(enc_in==4'b0100)
    enc_out=2'b10;
    else if(enc_in==4'b1000)
    enc_out=2'b11;
    else
    enc_out=2'bxx;
    end
    end
    
endmodule
